{
  "apps": {
    "name": "pm2-app",
    "script": "./app.js",
    "cwd": "./",
    "args": "",
    "interpreter": "",
    "interpreter_args": "",
    "watch": true,
    "ignore_watch": [
      "node_modules",
      "logs"
    ],
    "error_file": "./logs/app-err.log",
    "out_file": "./logs/app-out.log",
    "merge_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm:ss",
    "env": {
      "NODE_ENV": "production",
      "REMOTE_ADDR": "isProduction"
    },
    "env_dev": {
      "NODE_ENV": "development",
      "REMOTE_ADDR": ""
    },
    "env_test": {
      "NODE_ENV": "test",
      "REMOTE_ADDR": ""
    }
  }
}